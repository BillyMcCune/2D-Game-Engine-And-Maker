<?xml version="1.0" encoding="UTF-8"?>
<!--
map => the map node
layer => the layer
-->
<!-- The map node is the main node: width and height in pixels z defined how objects are layers and which objects
interact with each other -->
<map width="500" height="500">
  <layer name="backGround" width="500" height="500" z="0">
    <data>
      <object id="3000" coordinates="(0,0)"/>
    </data>
  </layer>
  <layer name="foreground" width="500" height="500" z="1">
    <data>
      <object id="1" coordinates=""/>
      <object id="2" coordinates=""/>
      <object id="3" coordinates=""/>
      <object id="4" coordinates=""/>
      <object id="5" coordinates=""/>
    </data>
  </layer>
  <layer name="entities" width="500" height="500" z="1">
    <data>
      <object id="111" coordinates=""/>
      <object id="12" coordinates=""/>
    </data>
  </layer>
  <layer name="events" width="500" height="500" z="1">
    <data>
      <object id="" coordinates=""/>
    </data>
  </layer>
  <game name="dinosaurgame">
  <objectGroup name="entities">
<!-- Objects have spriteName, type, gid, and the spriteFile the spriteName is used to read the spriteFile-->
<!-- Objects should also have a defined hit box-->
    <object spriteName="Dino" type="player" id="111" spriteFile="dinosaur.xml">
<!-- Properties are categorized by object handler: physics, collision, input, sprite, ai, and maybe event -->
      <properties>
        <inputHandler>
          <data keys="W,Up" eventChainID="jumpDino"/>
          <data keys="S,Down" eventChainID="" animation="duck-walk"/>
        </inputHandler>
        <collisionHandler>
<!-- collisionHandler data has three main tags:
groupObjectInteraction: defines a group of objects that causes the object to call an event chain:
using a file system format with commas files structure is defined as: objectGroup/objectType
 (if no object type defined then the whole object group will be added to the object list that activates the collision
objectSpecificInteractionIDs: defines objects based on the object id for specific objects
eventChainID: The event chain id you want the collision to activate - defined later -->
          <data groupObjectInteraction="entities/enemies" objectSpecificInteractionIDs="1,3" eventChainID=""/>
        </collisionHandler>
        <physicsHandler>
          <data name = "velocity.x" value = "0"/>
          <data name = "velocity.y" value = "0"/>
        </physicsHandler>
        <variables>
          <variable name = "jumpVelocity.y" value = "5"/>
          <variable name = "animationStep" value="5"/>
        </variables>
      </properties>
    </object>
    <object spriteName="Bird" type="enemies" id="12" spriteFile="bird.xml">
      <properties>
        <physicsHandler>
          <data name = "velocity.x" value = "5"/>
          <data name = "velocity.y" value = "0"/>
        </physicsHandler>
      </properties>
    </object>
  </objectGroup>
    <objectGroup name="blocks">
      <object type="" id="1" spriteFile="track.xml" spriteName="track-0" />
      <object type="" id="2" spriteFile="track.xml" spriteName="track-1" />
      <object type="" id="3" spriteFile="track.xml" spriteName="track-2" />
      <object type="" id="4" spriteFile="track.xml" spriteName="track-3" />
      <object type="" id="5" spriteFile="track.xml" spriteName="track-4" />
    </objectGroup>
    <objectGroup name="backgrounds">
  <object type="background" id="3000" spriteFile="" spriteName=""/>
    </objectGroup>
  </game>
  <eventChains>
    <eventChain id="JumpDino">
      <event order="0" eventId="setVariableToVariable">
        <parameters>
          <param order="0" value="velocity.y"/>
          <param order="1" value="jumpVelocity.y"/>
        </parameters>
      </event>
      <event order="1" eventId="runAnimation">
        <parameters>
          <param order="0" value="jump"/>
        </parameters>
      </event>
    </eventChain>
    <eventChain id="DinoJump-PowerUp">
      <event order="0" eventId="incrementVariableByValue">
        <parameters>
          <param order="0" value="jumpVelocity.y"/>
          <param order="1" value="10"/>
        </parameters>
      </event>
    </eventChain>
  </eventChains>
</map>