<?xml version="1.0" encoding="UTF-8"?>
<!--
map => the map node
layer => the layer
-->
<!-- The map node is the main node: width and height in pixels z defined how objects are layers and which objects
interact with each other -->
<map width="500" height="500">
  <layers>
  <layer name="backGround" width="500" height="500" z="0">
    <data>
      <object id="3000" coordinates="(0,0)"/>
    </data>
  </layer>
  <layer name="foreground" width="500" height="500" z="1">
    <data>
      <object id="1" coordinates="" uid=""/>
      <object id="2" coordinates="" uid=""/>
      <object id="3" coordinates="" uid=""/>
      <object id="4" coordinates="" uid=""/>
      <object id="5" coordinates="" uid=""/>
    </data>
  </layer>
  <layer name="entities" width="500" height="500" z="1">
    <data>
      <object id="111" coordinates="(0,10)" uid="1"/>
      <object id="12" coordinates="(50,200)" uid="2"/>
    </data>
  </layer>
  <layer name="events" width="500" height="500" z="1">
    <data>
      <object id="" coordinates=""/>
    </data>
  </layer>
  </layers>
  <game name="dinosaurgame">
  <objectGroup name="entities">
<!-- Objects have spriteName, type, gid, and the spriteFile the spriteName is used to read the spriteFile-->
<!-- Objects should also have a defined hit box-->
    <object spriteName="Dino" type="player" id="111" spriteFile="dinosaur.xml" hitBoxWidth="" hitBoxHeight="" hitBoxType="SQUARE" spriteDx="" spriteDy="" eventIDs="20">
<!-- Properties are categorized by object handler: physics, collision, input, sprite, ai, and maybe event -->
      <properties>
        <variables>
          <variable name = "jumpVelocity.y" value = "5"/>
        </variables>
      </properties>
    </object>
    <object spriteName="Bird" type="enemies" id="12" spriteFile="bird.xml" hitBoxWidth="" hitBoxHeight="" spriteDx="" spriteDy="" eventIDs="">
        <properties>
          <data name = "velocity.x" value = "5"/>
          <data name = "velocity.y" value = "0"/>
        </properties>
    </object>
  </objectGroup>
    <objectGroup name="blocks">
      <object type="" id="1" spriteFile="track.xml" spriteName="track-0" />
      <object type="" id="2" spriteFile="track.xml" spriteName="track-1" />
      <object type="" id="3" spriteFile="track.xml" spriteName="track-2" />
      <object type="" id="4" spriteFile="track.xml" spriteName="track-3" />
      <object type="" id="5" spriteFile="track.xml" spriteName="track-4" />
    </objectGroup>
    <objectGroup name="backgrounds">
  <object type="background" id="3000" spriteFile="" spriteName=""/>
    </objectGroup>
  </game>
  <Events>
    <Event type="input" id="20">
<!--     Enums for event type, condition, and outcome-->
      <conditions>
        <condition list="SPACE_KEY_PRESSED" />
        <condition list="UP_ARROW_PRESSED" />
      </conditions>

      <outcomes list="JUMP"/>
      <parameters>
        <parameter name="velocity.y">5</parameter>
        <parameter name="jumpType">Floaty</parameter>
      </parameters>
    </Event>
  </Events>
</map>